@model List<Vidly.Models.Movie>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h1>Movies</h1>
<ul class="list-group">

    <li class="list-group-item">
        <strong>Movies</strong>
    </li>

    @foreach (var movie in Model)
    {
        <li class="list-group-item">
            @Html.ActionLink(@movie.Name, "Details", "Movies", new { id = movie.Id }, new { @class = "nav-link" })

        </li>
    }

    @if (Model.Count == 0)
    {
        <p> We don't have any movie yet.</p>
    }




</ul>




