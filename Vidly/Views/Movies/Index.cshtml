@model List<Vidly.Models.Movie>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>Movies</h1>

@Html.ActionLink("New Movie", "New", "Movies", new { @class = "btn btn-primary" })

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Movie</th>
            <th>Genre</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@Html.ActionLink(@movie.Name, "Edit", "Movies", new { id = movie.Id }, new { @class = "nav-link" })</td>
                <td>@movie.Genre.Name</td>
            </tr>

        }
    </tbody>

</table>

@if (Model.Count == 0)
{
    <p> We don't have any movie yet.</p>
}



